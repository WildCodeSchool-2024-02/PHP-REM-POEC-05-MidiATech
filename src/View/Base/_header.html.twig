
<button onclick="topFunction()" id="goToTop" title="Go to top">&#187;</button>

<header>
    <div class="container">
        <div class="logo">
            <a href="/"><img src="/../assets/images/logo.webp" alt="Midi a tech"></a>
            <h1>MIDI A TECH</h1>
        </div>

        <nav>
            <input id="menu-toggle" type="checkbox">
            <label class="menu-button-container" for="menu-toggle">
                <span class="menu-button"></span>
            </label>

            <ul class="menu">
                <li><a href="/">Accueil</a></li>
                <li><a href="/books">Livres</a></li>
                <li><a href="/musics">Musiques</a></li>
                <li><a href="/videos">Films</a></li>
                <li class="mobile">
                        <a href="/account">
                            {% if app.user %}
                            Profil
                            {% else %}
                            Connexion
                            {% endif %}
                        </a>
                </li>
            </ul>
<a class="desktop" href="/" id="accountIcon"><i class="fa-regular fa-circle-user"></i></a>
        </nav>
    </div>
</header>
<script>

document.addEventListener('DOMContentLoaded', function() {
    const accountIcon = document.getElementById('accountIcon');
    const isLoggedIn = {{ app.user ? 'true' : 'false' }};
    
    if (isLoggedIn) {
        accountIcon.href = '/profile';
    } else {
        accountIcon.href = '/';
    }
});</script>
