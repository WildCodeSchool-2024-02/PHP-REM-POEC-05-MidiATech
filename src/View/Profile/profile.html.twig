{% extends 'layout.html.twig' %}

{% block title %}
    {{ user.firstname }}
{% endblock %}

{% block stylesheet %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="/assets/css/profile.css"/>
{% endblock %}

{% block content %}
    {% if error %}
        <p class="text-danger">{{ error }}</p>
    {% endif %}

    <div class="container-profile emp-profile">
        <form method="post" action="/logout" id="logoutForm">
            <div class="row-first">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="assets/images/profile.jpg" alt="User-Profile-Image"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>{{ user.firstname }} {{ user.lastname }}</h5>
                        <p class="proile-rating">Reservation : <span>{{ borrowings|length }}</span></p>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Information</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Mes réservations</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <a href="/profile/edit" class="profile-edit-btn btn btn-primary">Editer</a>
                    <button type="button" class="btn-deconnecttion mt-2" onclick="document.getElementById('logoutForm').submit();">Se déconnecter</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nom :</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ user.firstname }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Prénom :</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ user.lastname }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Email : </label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ user.email }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Téléphone : </label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ user.phone }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Adresse : </label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ user.address }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            {% if borrowings is empty %}
                                <p>Aucune réservation trouvée</p>
                            {% else %}
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Id Media</th>
                                                <th>Type de media</th>
                                                <th>A rendre avant :</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for borrowing in borrowings %}
                                                <tr>
                                                    <td>{{ borrowing.id_media }}</td>
                                                    <td>{{ borrowing.media_type }}</td>
                                                    <td>{{ borrowing.date }}</td>
                                                    <td>
                                                        <button class="btn btn-danger" onclick="returnMedia({{ borrowing.id }})">Rendre</button>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascript %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script>
        function returnMedia(borrowingId) {
            fetch(`/borrowings/return/${borrowingId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Erreur lors du rendu du média.');
                }
            });
        }
    </script>
{% endblock %}
